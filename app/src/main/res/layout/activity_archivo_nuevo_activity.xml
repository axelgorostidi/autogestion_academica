<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CED6FF"
    tools:context=".activity.archivo_nuevo_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo Archivo"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNuevoArchivoCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CURSO" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNuevoArchivoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangulo_campo"
            android:ems="10"
            android:hint="Título"
            android:inputType="textPersonName"
            android:minHeight="40dp"
            android:paddingHorizontal="5dp"
            app:backgroundTint="@null" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNuevoArchivoDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangulo_campo"
            android:ems="10"
            android:hint="Descripción"
            android:minHeight="40dp"
            android:paddingHorizontal="5dp"
            app:backgroundTint="@null" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNuevoArchivoLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangulo_campo"
            android:ems="10"
            android:hint="Link"
            android:inputType="textUri"
            android:minHeight="40dp"
            android:paddingHorizontal="5dp"
            app:backgroundTint="@null" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/presionarboton1"
            android:gravity="center"
            android:onClick="onClickAgregar"
            android:text="@string/agregar"
            app:backgroundTint="@null" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>